
<!-- Including Header Layout For the Template  -->

<%- include('header.ejs') %>
       
      <div class="container" id="LoginForm">
      <div class="login-form">
      <div class="main-div">
          <div class="panel">
         <h2>Admin Login</h2>
         <p>Please enter your User Name and password</p>
         </div>
         <% if(msg !=''){ %>
            <div class="alert alert-success" role="alert">
              
               <p >
                  <%= msg%>
               </p>
           
            </div>
            <%}%>
          <form action="/"  id="Login" method="POST">
      
              <div class="form-group">
      
      
                  <input type="text" class="form-control" id="inputEmail" placeholder="User Name" name="username">
      
              </div>
      
              <div class="form-group">
      
                  <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
      
              </div>
              <div class="forgot">
                <p>Create a new Account  <a href="/signup">Sign Up</a> Here</p>
              
      </div>
              <button type="submit" class="btn btn-primary">Login</button>
      
          </form>
          </div>

      </div></div></div>
      


      <!-- Including Footer Layout For The Template -->
      
  <%- include('footer.ejs')%>
